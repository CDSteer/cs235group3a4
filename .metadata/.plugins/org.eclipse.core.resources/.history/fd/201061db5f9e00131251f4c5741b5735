public class C4GameInfo {

    private Font fontArial;
    private boolean player1Wins;
    private boolean player2Wins;
    
    private C4Rules c4rules;
    private C4Board c4Board;
    private HumPlayer player1;									//Player1 information
    private HumPlayer player2;
    

    /**
     *Sets the Font
     * @return 
     */
    
    public C4GameInfo() {
    	c4rules = new C4Rules();
    }
	


    public void GameInfo(){
    	
        if (player1Wins == true){
        	
        } else if (player2Wins == true){
        	
        }
    }
    
    /*
     * method to call and store which player has won
     */
    public void callGameState() {
    	if (c4rules.winCondition(c4Board) == player1) {
    		player1Wins = true;
    	} else if (c4rules.winCondition(c4Board) == player2) {
    		player2Wins = true;
    	}
    }

